<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.view.lobby.NewGroupController">

    <center>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="557.0" spacing="25.0" style="-fx-background-color: lightcyan;">
            <TextField fx:id="groupNameField" prefHeight="26.0" prefWidth="541.0" promptText="group name">
            <font>
               <Font name="Beirut Regular" size="19.0" />
            </font></TextField>
            <HBox alignment="CENTER">
                <Label text="player count">
               <font>
                  <Font name="Bodoni 72 Book" size="19.0" />
               </font></Label>
                <Spinner fx:id="playerCountSpinner" />
            </HBox>
            <HBox alignment="CENTER">
                <CheckBox fx:id="isPrivateCheckbox" text="private">
               <font>
                  <Font name="Bodoni 72 Book" size="17.0" />
               </font></CheckBox>
            </HBox>
            <Button onMouseClicked="#createNewGroup" style="-fx-background-color: limegreen;" text="create">
            <font>
               <Font name="Canela Text Regular" size="13.0" />
            </font></Button>
        </VBox>
    </center>
</BorderPane>
