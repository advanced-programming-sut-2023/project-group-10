<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0"
      prefWidth="500.0" xmlns="http://javafx.com/javafx/19"
      fx:controller="org.example.view.ItemDetailMenuController" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox fx:id="infos" spacing="130">
            <children>
                <VBox spacing="25">
                    <Label fx:id="name">
                    </Label>
                <ImageView fitHeight="159.0" fitWidth="141.0" pickOnBounds="true" preserveRatio="true"
                           fx:id="imageOfItem"/>

                </VBox>
                <VBox  fx:id="rightBox" spacing="20">
                    <children>

                        <HBox   fx:id="storageInfo">

                        </HBox>
                        <HBox  fx:id="buyBox">

                        </HBox>
                        <HBox fx:id="sellBox">

                        </HBox>
                        <VBox fx:id="amountBox">
                            <Label fx:id="itemAmount">
                            </Label>
                        </VBox>
                    </children>
                </VBox>

            </children>
        </HBox>
        <Button layoutX="50" layoutY="10.0" mnemonicParsing="false" text="Back" onMouseClicked="#cancel"/>

    </children>
</Pane>
